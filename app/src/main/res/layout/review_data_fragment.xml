<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/inputBox"
            android:layout_width="330dp"
            android:layout_height="167dp"
            android:layout_marginTop="48dp"
            android:background="@color/black"
            android:gravity="top|start"
            android:hint="Input Hint"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ratingBar" />

        <EditText
            android:id="@+id/locationBox"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginTop="48dp"
            android:background="@color/black"
            android:gravity="top|start"
            android:hint="Input Hint"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputBox" />

        <EditText
            android:id="@+id/categoryBox"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginTop="48dp"
            android:background="@color/black"
            android:gravity="top|start"
            android:hint="Input Hint"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationBox" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your review below"
            app:layout_constraintBottom_toTopOf="@+id/inputBox"
            app:layout_constraintStart_toStartOf="@+id/inputBox" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter location below"
            app:layout_constraintBottom_toTopOf="@+id/locationBox"
            app:layout_constraintStart_toStartOf="@+id/locationBox" />

        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Enter Category of coffedrink below:"
            app:layout_constraintStart_toStartOf="@+id/locationBox"
            app:layout_constraintTop_toBottomOf="@+id/locationBox" />

        <TextView
            android:id="@+id/currentProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />

        <Button
            android:id="@+id/textSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryBox" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="top|start"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/currentProduct" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
